@model WebAPI.StudentModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>StudentModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                @Html.LabelFor(model => model.StudentName, new { @class = "control-label col-md-2" })
                <label for="name"></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StudentName)
                    @Html.ValidationMessageFor(model => model.StudentName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UniversityName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UniversityName)
                    @Html.ValidationMessageFor(model => model.UniversityName)
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Save student","Create")
            </div>
            <p>This is a paragraph</p>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
